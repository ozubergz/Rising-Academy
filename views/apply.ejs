<%- include("partials/header.ejs")-%>
<div class="container-fluid register-pg">
  
  <form action="/apply" method="POST">
    <div class="register-modal row">
      <div class="parent-info col-lg-6 col-md-12 col-sm-12">
        <h3 class="mb-3">Parent's Info</h3>
        
        <div class="row">
          <div class="form-group col-md-6 col-sm-6 col-6">
            <label for="firstName" class="required-field">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="First Name" required>
          </div>
          <div class="form-group col-md-6 col-sm-6 col-6">
            <label for="lastName" class="required-field">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Last Name" required>
          </div>
        </div>
        <div class="form-group">
          <label for="phone" class="required-field">Phone/Cell Number</label>
          <input type="text" class="form-control" name="phone" id="phone" placeholder="(123) 456-7890" required>
        </div>
        <div class="form-group">
          <label for="inputAddress" class="required-field">Address</label>
          <input type="text" class="form-control" id="inputAddress" name="street" required>
        </div>
        <div class="form-group">
          <label for="inputAddress2">Address</label>
          <input type="text" class="form-control" id="inputAddress2" name="floor" id="inputAddress2"
            placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6 col-sm-6 col-6">
            <label for="city" class="required-field">City</label>
            <input type="text" class="form-control" name="city" id="city" required>
          </div>
          <div class="form-group col-md-4 col-sm-4 col-3">
            <label for="state" class="required-field">State</label>
            <input type="text" class="form-control" name="state" id="state" required>
          </div>
          <div class="form-group col-md-2 col-sm-2 col-3">
            <label for="zipcode" class="required-field">Zip</label>
            <input type="text" class="form-control" name="zip" id="zipcode" required>
          </div>
        </div>
      </div>
      
      <div class="childs-info col-lg-6 col-md-12 col-sm-12">
        <h3>Child's info</h3>
        
        <div class="form-row">
          <div class="form-group col-md-8 col-sm-8 col-8">
            <input class="form-control" name="student_name" placeholder="Child's Full Name" required>
          </div>
          <div class="form-group col-md-4 col-sm-4 col-4">
            <select name="grade" class="form-control" required>
              <option value="" selected>Grade...</option>
              <option value="kindergarten">Kindergarten</option>
              <option value="1st">1st Grade</option>
              <option value="2nd">2nd Grade</option>
              <option value="1st">3rd Grade</option>
              <option value="2nd">4th Grade</option>
              <option value="1st">5th Grade</option>
              <option value="2nd">6th Grade</option>
              <option value="1st">7th Grade</option>
              <option value="2nd">8th Grade</option>
            </select>
          </div>
        </div>
        <div id="additional-form"></div>
        <button type="button" class="btn btn-primary" id="add-btn">Add More +</button>
      </div>
      <div class="col-lg-6 col-md-12">
        <button type="submit" class="submit-btn btn btn-success">Submit</button>
      </div>
    </div>
    
  </form>
  
</div>

<%- include("partials/footer.ejs")-%>